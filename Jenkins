pipeline {
    agent {
        docker {
            image 'node:16.14.2'
        }
    }

    environment {
        CI = 'true'
    }

    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/wmt-krunald/SnapShot.git'
            }
            
        }
        
        stage('build') {
            steps {
                sh 'npm ci'
                sh 'npm run build'
            }
            
            post{
                success{
                    
                    archiveArtifacts artifacts: 'build/'
                }
            }
        }
        
        stage('deploy') {
            steps {
                sh 'npm install netlify-cli'
                sh 'npx netlify deploy --site $NETLIFY_SITE_ID --auth $NETLIFY_AUTH_TOKEN --dir build/ --prod'	#make sure you have 																created environment 																variable on jenkins 																like NETLIFY_SITE_ID 																and NETLIFY_AUTH_TOKEN
            }
        }
    }

}
